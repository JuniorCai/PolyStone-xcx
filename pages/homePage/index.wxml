<view class='page'>
  <view class='pageContent'>
    <banner-view >

    </banner-view>
    <view class='baseBar'>
      <view class='barItem'>
      浏览：100
      </view>
      <view class='separateLine'></view>
      <view class='barItem'>
      收藏：10
      </view>
    </view>
    <view class='intro'>
      <text>公司简介：{{company.introduction==null?"":company.introduction}}</text>
    </view>
    <view class='baseInfo'>
      <van-cell-group>
        <van-cell 
          title='主营：'
          value='{{company.business==null?"":company.business}}'
          title-class='baseName'
          value-class='baseValue'
        />
        <van-cell 
          title='联系方式：'
          value="{{company.contacts.length>0?company.contacts[0].linkMan+'  '+company.contacts[0].phone:''}}"
          title-class='baseName'
          value-class='baseValue'
        />
        <van-cell 
          title='地址：'
          value="{{company.address}}"
          title-class='baseName'
          value-class='baseValue'
        />
      </van-cell-group>
    </view>
    <view class='tabContainer'>
      <van-tabs sticky animated bind:change="onChange">
        <van-tab title="产品">
          <scroll-view scroll-y="{{true}}">
            <van-cell wx:for="{{products}}" wx:for-item="product" wx:for-index="pIndex" title="{{product.title}}" value="" />
            
          </scroll-view>
        </van-tab>
        <van-tab title="圈子">圈子</van-tab>
        <van-tab title="联系方式">联系方式</van-tab>
      </van-tabs>
    </view>

  </view>
</view>